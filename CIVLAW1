<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interactive Legal MCQ</title>
    <!-- Tailwind CSS for styling -->
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Custom styles for a slightly more polished look */
        body {
            font-family: 'Inter', sans-serif;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }
        .option-label {
            transition: background-color 0.2s ease-in-out, border-color 0.2s ease-in-out;
        }
        .option-label:hover {
            background-color: #f0f4f8; /* A light blue-gray hover */
        }
        /* Style for when a radio button is checked */
        input[type="radio"]:checked + .option-label {
            border-color: #3b82f6; /* Blue-500 */
            background-color: #eff6ff; /* Blue-50 */
        }
        /* Hide the default radio button */
        input[type="radio"] {
            display: none;
        }
    </style>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen p-4">

    <div class="w-full max-w-2xl bg-white rounded-xl shadow-lg p-6 md:p-8">

        <h1 class="text-2xl md:text-3xl font-bold text-gray-800 mb-6 text-center">Legal Quiz</h1>

        <!-- Question Block -->
        <div id="quiz-container">
            <form id="mcq-form">
                <div class="mb-6">
                    <div class="flex items-start mb-4">
                        <span id="question-number" class="text-xl font-bold text-blue-600 mr-3">Q1.</span>
                        <p id="question-text" class="text-lg text-gray-700">A donation of an immovable property, containing a reservation that the donor may sell the property during their lifetime, is considered:</p>
                    </div>
                    <!-- Result and Explanation Placeholder - Initially hidden -->
                    <div id="explanation-container" class="hidden ml-10 mb-4 p-4 border-l-4 rounded-r-lg">
                        <p id="result-text" class="font-bold text-lg mb-2"></p>
                        <p id="explanation-text" class="text-gray-600"></p>
                    </div>
                </div>

                <!-- Answer Options -->
                <div id="options-container" class="space-y-4">
                    <!-- Option A -->
                    <div>
                        <input type="radio" id="optionA" name="answer" value="A">
                        <label for="optionA" class="option-label flex items-center p-4 border-2 border-gray-200 rounded-lg cursor-pointer">
                            <span class="font-bold text-gray-700 mr-4">A.</span>
                            <span class="text-gray-800">A donation inter vivos, as it is intended to take effect immediately.</span>
                        </label>
                    </div>
                    <!-- Option B -->
                    <div>
                        <input type="radio" id="optionB" name="answer" value="B">
                        <label for="optionB" class="option-label flex items-center p-4 border-2 border-gray-200 rounded-lg cursor-pointer">
                            <span class="font-bold text-gray-700 mr-4">B.</span>
                            <span class="text-gray-800">A donation mortis causa, as the full transfer of ownership is dependent on the donor's death.</span>
                        </label>
                    </div>
                    <!-- Option C -->
                    <div>
                        <input type="radio" id="optionC" name="answer" value="C">
                        <label for="optionC" class="option-label flex items-center p-4 border-2 border-gray-200 rounded-lg cursor-pointer">
                            <span class="font-bold text-gray-700 mr-4">C.</span>
                            <span class="text-gray-800">A void donation, as the reservation is an illegal condition.</span>
                        </label>
                    </div>
                    <!-- Option D -->
                    <div>
                        <input type="radio" id="optionD" name="answer" value="D">
                        <label for="optionD" class="option-label flex items-center p-4 border-2 border-gray-200 rounded-lg cursor-pointer">
                            <span class="font-bold text-gray-700 mr-4">D.</span>
                            <span class="text-gray-800">A voidable donation, as the donor has not fully transferred ownership to the donee.</span>
                        </label>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="mt-8 flex justify-end">
                    <button type="submit" id="submit-btn" class="bg-blue-600 text-white font-bold py-3 px-8 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-4 focus:ring-blue-300 transition-transform transform hover:scale-105">
                        Submit
                    </button>
                </div>
            </form>
        </div>

        <!-- Score Section -->
        <div class="mt-6 border-t pt-4 text-center">
            <h2 class="text-xl font-bold text-gray-800">Total Score: <span id="score" class="text-blue-600">- / 1</span></h2>
        </div>
    </div>

    <script>
        // Self-contained JavaScript logic
        document.addEventListener('DOMContentLoaded', function () {
            // --- DOM Element References ---
            const form = document.getElementById('mcq-form');
            const submitBtn = document.getElementById('submit-btn');
            const explanationContainer = document.getElementById('explanation-container');
            const resultText = document.getElementById('result-text');
            const explanationText = document.getElementById('explanation-text');
            const scoreDisplay = document.getElementById('score');
            const radioButtons = document.querySelectorAll('input[name="answer"]');

            // --- Quiz Data ---
            const correctAnswer = 'B';
            const legalExplanation = "The reservation of the right to dispose of the property during the donor's lifetime is a clear indication that the donation is mortis causa, as the final disposition of the property is dependent on the donor's death. It must comply with the formalities of a will to be valid.";

            let score = 0;
            let submitted = false;

            // --- Event Listener for Form Submission ---
            form.addEventListener('submit', function (event) {
                event.preventDefault(); // Prevent default form submission

                if (submitted) return; // Prevent re-submission

                const selectedOption = document.querySelector('input[name="answer"]:checked');

                // Check if an answer was selected
                if (!selectedOption) {
                    alert('Please select an answer before submitting.');
                    return;
                }

                submitted = true;
                const userAnswer = selectedOption.value;

                // --- Check the Answer and Update UI ---
                if (userAnswer === correctAnswer) {
                    // Handle Correct Answer
                    score = 1;
                    resultText.textContent = 'Correct!';
                    resultText.className = 'font-bold text-lg mb-2 text-green-600';
                    explanationContainer.className = 'ml-10 mb-4 p-4 border-l-4 rounded-r-lg bg-green-50 border-green-500';
                } else {
                    // Handle Incorrect Answer
                    score = 0;
                    resultText.textContent = 'Incorrect.';
                    resultText.className = 'font-bold text-lg mb-2 text-red-600';
                    explanationContainer.className = 'ml-10 mb-4 p-4 border-l-4 rounded-r-lg bg-red-50 border-red-500';
                }

                // Display the explanation
                explanationText.textContent = `Legal Basis: ${legalExplanation}`;
                explanationContainer.classList.remove('hidden');

                // Update the score display
                scoreDisplay.textContent = `${score} / 1`;

                // Disable form elements after submission
                submitBtn.disabled = true;
                submitBtn.textContent = 'Submitted';
                submitBtn.classList.remove('hover:bg-blue-700', 'hover:scale-105');
                submitBtn.classList.add('bg-gray-400', 'cursor-not-allowed');

                radioButtons.forEach(radio => {
                    radio.disabled = true;
                    // Also make labels look disabled
                    radio.nextElementSibling.classList.add('cursor-not-allowed', 'opacity-60');
                    radio.nextElementSibling.classList.remove('hover:bg-f0f4f8');
                });
            });
        });
    </script>
</body>
</html>
